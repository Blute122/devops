pipeline {
    agent any
    
    environment {
        DOCKER_HUB_REPO = 'blute122/admission-portal' 
        DOCKER_CRED_ID = 'docker-hub-credentials'
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', DOCKER_CRED_ID) {
                        def appImage = docker.build("${DOCKER_HUB_REPO}:${BUILD_NUMBER}")
                        appImage.push()
                        appImage.push('latest')
                    }
                }
            }
        }

        stage('Ansible Env Setup') {
            steps {
                ansiblePlaybook playbook: 'ansible/setup_env.yaml', 
                                inventory: 'ansible/inventory.ini', 
                                credentialsId: 'ssh-key-for-ansible' 
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f k8s/deployment.yaml'
                sh 'kubectl apply -f k8s/service.yaml'
                sh 'kubectl rollout restart deployment/admission-app'
            }
        }
    }  // ← Closes 'stages'

    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'Deployment Failed.'
        }
    }
}  // ← Closes 'pipeline'
