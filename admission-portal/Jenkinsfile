pipeline {
    agent any
    
    environment {
        // UPDATE THESE VARIABLES
        DOCKER_HUB_REPO = 'blute122/admission-portal' 
        DOCKER_CRED_ID = 'docker-hub-credentials'
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', DOCKER_CRED_ID) {
                        def appImage = docker.build("${DOCKER_HUB_REPO}:${BUILD_NUMBER}")
                        appImage.push()
                        appImage.push('latest')
                    }
                }
            }
        }

        stage('Ansible Env Setup') {
            steps {
                // Ensure Ansible plugin is configured
                ansiblePlaybook playbook: 'ansible/setup_env.yaml', 
                                inventory: 'ansible/inventory.ini', 
                                credentialsId: 'ssh-key-for-ansible' 
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                // We are running directly on the VM, so we don't need the withKubeConfig wrapper
                sh 'kubectl apply -f k8s/deployment.yaml'
                sh 'kubectl apply -f k8s/service.yaml'
                // Restart to force the new image to load
                sh 'kubectl rollout restart deployment/admission-app'
            }
        }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!'
            // slackSend channel: '#devops', color: 'good', message: "Deployed Build ${BUILD_NUMBER}"
        }
        failure {
            echo 'Deployment Failed.'
        }
    }
}
